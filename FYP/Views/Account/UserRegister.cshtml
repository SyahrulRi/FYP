@model SysUser

<div class="container">

    @if (ViewData["Message"] != null)
    {
        <div class="alert alert-@ViewData["Message"]]">@ViewData["Message"]</div>
    }

    <div class="my-3">
        <h2>Register an Account</h2>
    </div>

    <form method="post" asp-controller="Account" asp-action="Register">

        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="FullName" class="form-control"
                   placeholder="UserID" />
            <label asp-for="FullName">Full Name</label>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="Email" class="form-control"
                   placeholder="Email" />
            <label asp-for="Email">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="UserId" class="form-control"
                   placeholder="UserId" />
            <label asp-for="UserId">User Id</label>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="UserPw" class="form-control"
                   placeholder="UserPw" />
            <label asp-for="UserPw">Password</label>
            <span asp-validation-for="UserPw" class="text-danger"></span>
        </div>
        
        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="UserPw2" class="form-control"
                   placeholder="UserPw2" />
            <label asp-for="UserPw2">Confirm password</label>
            <span asp-validation-for="UserPw2" class="text-danger"></span>
        </div>

        <div class="col-auto mb-3">
            <button class="btn btn-primary" type="submit">Register</button>
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class="col-6">
                    <div class="alert alert-@ViewData["MsgType"]">
                        <b>Message: </b>@ViewData["Message"]<br />
                        @if (!String.IsNullOrEmpty(ViewData["ExecSQL"]?.ToString()))
                        {
                            <b>SQL: </b>

                            @ViewData["ExecSQL"]?.ToString()
                        }
                    </div>
                </div>
            </div>
        }
    </form>
</div>
