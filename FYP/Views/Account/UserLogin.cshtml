@model UserLogin

<div class="container">

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-@TempData["MsgType"]">@TempData["Message"]</div>
    }

    <div class="my-3">
        <h2>Please sign-in</h2>
    </div>

    <form method="post" asp-controller="Account" asp-action="Login">

        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="UserID" class="form-control"
                   placeholder="UserID" />
            <label asp-for="UserID">User Id</label>
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="Password" class="form-control"
                   placeholder="Password" />
            <label asp-for="Password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-control border-0 h-auto">
            <div class="form-check form-check-inline">
                <input class="form-check-input" asp-for="RememberMe" />
                <label class="form-check-label" asp-for="RememberMe">Remember Me?</label>
            </div>
        </div>

        <div class="mb-3 text-danger">
            @ViewData["Message"]
        </div>

        <div class="col-auto mb-3">
            <button class="btn btn-primary" type="submit">Login</button>
        </div>

    </form>
</div>