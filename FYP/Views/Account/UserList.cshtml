@model List<SysUser>

@section MoreScripts {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#jsUsersTable').DataTable({
                lengthMenu: [[5, -1], [5, "All"]]
            });
        });
    </script>
}

    <div class="my-3">
        <h2>Farmers</h2>
    </div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}

<table id="jsUsersTable" class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (SysUser user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                   <a asp-controller="Account" asp-action="Delete"
                   asp-route-id="@user.UserId"
                   onclick="return confirm('Delete User [@user.FullName]?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
