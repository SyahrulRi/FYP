
@section MoreScripts {

    <script>

        window.onload = function () {

            var chart = new CanvasJS.Chart("chartContainer", {
                animationEnabled: true,
                title: {
                    text: "Temperature Chart"
                },
                toolTip: {
                    shared: true
                },
                data: [{
                    type: "line",
                    name: "Temperature (C)",
                    showInLegend: true,
                    dataPoints: @Html.Raw(ViewBag.DataPoints1)
                      }]
            });
            chart.render();

        }
    </script>
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}

<form asp-controller="Account" asp-action="ProfilePost" method="post">

    <div id="chartContainer" style="height: 370px; width: 100%;"></div>
    <script src="https://cdn.canvasjs.com/canvasjs.min.js"></script>

    <div class="col-md-3 mb-3 form-floating">
        <select class="form-select" id="yearly" name="yearly" onchange="this.form.submit()">
            <option value="2020">2020</option>
            <option value="2021">2021</option>
            <option value="2022">2022</option>
            <option value="2023">2023</option>
        </select>
        <label>Select a year to display yearly data</label>
    </div>
</form>